{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "* * 1 */1 *"
  ],
  "packageRules": [
    {
      "groupName": "all major dependencies",
      "groupSlug": "all-major-patch",
      "labels": [
        "dependencies"
      ],
      "dependencyDashboardApproval": true,
      "assigneesFromCodeOwners": true,
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
